rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidUser() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    function isParticipant(participants) {
      return isAuthenticated() && request.auth.uid in participants;
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own profile, or limited info of others
      allow read: if isAuthenticated();
      
      // Users can only create/update their own profile
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && 
        // Prevent users from modifying certain fields
        !request.resource.data.diff(resource.data).affectedKeys()
          .hasAny(['isPremium', 'premiumTier', 'premiumExpiresAt', 'isVerified']);
      
      // No client-side deletes
      allow delete: if false;
    }

    // User preferences
    match /preferences/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Questionnaire answers
    match /questionnaires/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Matches collection
    match /matches/{matchId} {
      // Users can read matches where they are a participant
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || 
         resource.data.matchedUserId == request.auth.uid);
      
      // Matches are created by Cloud Functions only
      allow create: if false;
      
      // Users can update only their own action
      allow update: if isAuthenticated() && 
        resource.data.userId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['userAction', 'status']);
    }

    // Chat rooms
    match /rooms/{roomId} {
      allow read: if isParticipant(resource.data.participants);
      
      // Rooms are created by Cloud Functions
      allow create: if false;
      
      // Participants can update room status and decisions
      allow update: if isParticipant(resource.data.participants) &&
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['decisions', 'status', 'lastMessageAt', 'messageCount']);
    }

    // Messages sub-collection
    match /messages/{messageId} {
      // Can read messages if participant in the room
      allow read: if isAuthenticated();
      
      // Can create if authenticated and is the sender
      allow create: if isAuthenticated() && 
        request.resource.data.senderId == request.auth.uid &&
        request.resource.data.keys().hasAll(['roomId', 'senderId', 'text', 'type', 'createdAt']);
      
      // Can update status only (for read receipts)
      allow update: if isAuthenticated() &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']);
    }

    // Reports collection (for trust & safety)
    match /reports/{reportId} {
      // Any authenticated user can create reports
      allow create: if isAuthenticated() && 
        request.resource.data.reporterId == request.auth.uid;
      
      // Only the reporter can read their own reports
      allow read: if isAuthenticated() && 
        resource.data.reporterId == request.auth.uid;
      
      // No client-side updates or deletes
      allow update, delete: if false;
    }

    // Blocked users
    match /blocks/{blockId} {
      allow read, create: if isAuthenticated() && 
        resource.data.blockerId == request.auth.uid;
      allow delete: if isOwner(resource.data.blockerId);
    }

    // Premium transactions
    match /transactions/{transactionId} {
      // Users can only read their own transactions
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      
      // Transactions are created by Cloud Functions only
      allow create, update, delete: if false;
    }

    // FCM tokens
    match /fcm_tokens/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Archived rooms (read-only for admins)
    match /rooms_archive/{roomId} {
      allow read, write: if false;
    }
  }
}
